public class RectPrism implements Shape {
	double width;
	double height;
	double length;
	
	public RectPrism(double w,double h,double l){
		this.width=w;
		this.height=h;
		this.length=l;
	}
	
	public double getWidth() {
		return width;
	}

	public void setWidth(double width) {
		this.width = width;
	}

	public double getHeight() {
		return height;
	}

	public void setHeight(double height) {
		this.height = height;
	}

	public double getLength() {
		return length;
	}

	public void setLength(double length) {
		this.length = length;
	}

	public double getArea(){
		return (2*length*width)+(2*height*width)+(2*height*length);
	}
	
	public double getVolume(){
		return length*width*height;
	}
	
	public String toString(){
		String ret = "Rectangular Prism with height "+this.height+", length "+this.length+", width "+this.width+"\n";
		ret+="Volume is "+getVolume()+"\n";
		ret+="Area is "+getArea()+"\n";
		return ret;
	}
	
	public static void main (String []args){
		RectPrism test = new RectPrism(1,2,3);
		System.out.println(test);
	}
}